---
import Layout from '../layouts/Layout.astro';
import { Client } from '@notionhq/client';
import type { RichTextItemResponse } from '@notionhq/client/build/src/api-endpoints';

const notion = new Client({ auth: import.meta.env.NOTION_API_KEY });

const year = new Date().getFullYear();

const response = await notion.databases.query({
  database_id: import.meta.env.DATABASE_ID,
});

const images = response.results
  .map((page) => {
    if ('properties' in page) {
      const title = page.properties.Title;
      if (title && 'type' in title && title.type === 'title') {
        return title.title[0];
      }
    }
    return false;
  })
  .filter((title): title is RichTextItemResponse => !!title)
  .map((title) => {
    const separator = 'https://';
    const [label, href] = title.plain_text.split(separator);

    return { label, href: `${separator}${href}` };
  });
---

<Layout title="Welcome to Astro.">
  <div
    class="bg-white dark:bg-slate-800 py-6 sm:py-8 lg:py-12 flex flex-col h-screen justify-between"
  >
    <main class="mb-auto">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <!-- text - start -->
        <div class="mb-10 md:mb-16">
          <h2
            class="text-gray-800 dark:text-white text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6"
          >
            Ema Suriano's Art
          </h2>

          <p
            class="max-w-screen-md dark:text-slate-400 text-gray-500 md:text-lg text-center mx-auto"
          >
            A collection of my best work in one place.
          </p>
        </div>
        <!-- text - end -->

        <div
          class="grid grid-cols-2 sm:grid-cols-3 gap-4 md:gap-6 xl:gap-8 gallery"
        >
          {
            images.map((image) => (
              <div class="group h-48 md:h-96 flex justify-end items-end bg-gray-100 overflow-hidden rounded-lg shadow-lg relative gallery-item">
                <a
                  href={image.href}
                  data-lightbox="gallery"
                  data-image-alt={image.label}
                >
                  <img
                    src={image.href}
                    loading="lazy"
                    alt={image.label}
                    class="w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 transition duration-200"
                  />

                  <div class="bg-gradient-to-t from-black via-transparent to-transparent opacity-20 absolute inset-0 pointer-events-none" />

                  <span class="inline-block text-gray-200 text-xs md:text-sm border border-gray-500 rounded-lg backdrop-blur relative px-2 md:px-3 py-1 mr-3 mb-3">
                    {image.label}
                  </span>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </main>

